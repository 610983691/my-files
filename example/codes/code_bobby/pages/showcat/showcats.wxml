<view class="page">
    <view class="page__hd">
        <view class="page__title">Article</view>
        <view class="page__desc">文章</view>
    </view>
    <view class="page__bd">
        <view wx:for="{{array}}" wx:for-index="idx" wx:for-item="itemName">
          <view>{{idx}}: {{itemName.textInfo}}</view>
        </view>
    </view>
    <view class="page__hd">
        <button size="mini" bindtap="loadmoreBtn">加载更多</button>
    </view>
</view>